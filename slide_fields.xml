<?xml version="1.0" encoding="UTF-8"?>
<form>
    <fieldset hidden="true" name="slide_fields_modal" repeat="true">
        <field
                name="image"
                label="MOD_SEOCLICK_SLIDER_IMAGE"
                type="media"/>
        <field
                name="url"
                type="text"
                label="MOD_SEOCLICK_SLIDER_URL_LABEL"/>
        <field
                name="url_open"
                type="radio"
                default="0"
                label="MOD_SEOCLICK_SLIDER_URL_OPEN_LABEL"
                class="btn-group btn-group-yesno">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field
                name="desc_block"
                type="radio"
                default="0"
                label="MOD_SEOCLICK_SLIDER_DESCBLOCK_LABEL"
                description="MOD_SEOCLICK_SLIDER_DESCBLOCK_DESCRIPTION"
                class="btn-group btn-group-yesno">
            <option value="1">JYES</option>
            <option value="0">JNO</option>
        </field>
        <field  name="note_description"
                type="note"
                label="MOD_SEOCLICK_SLIDER_DESCRIPTION_NOTE"
                showon="desc_block:1"/>
        <field name="header"
                type="text"
                label="MOD_SEOCLICK_SLIDER_HEADER"
                showon="desc_block:1"/>
        <field name="description"
                type="textarea"
                label="MOD_SEOCLICK_SLIDER_DESCRIPTION"
                rows="10"
                showon="desc_block:1"/>
    </fieldset>
</form>